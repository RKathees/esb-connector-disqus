<component name="disqus-thread" type="synapse/template">
    <subComponents>
        <component name="listThreads">
            <file>listThreads.xml</file>
            <description>List Posts beloning to a Forum OR to a category based on the inputs
                provided.
            </description>
        </component>
        <component name="subscribe">
            <file>subscribe.xml</file>
            <description>Subscribe or Unsubscribe to a Thread in Disqus Forum.</description>
        </component>
        <component name="getThreadDetails">
            <file>getThreadDetails.xml</file>
            <description>Get a Thread by ID.</description>
        </component>
        <component name="createThread">
            <file>createThread.xml</file>
            <description>Create a Thread in a Forum.</description>
        </component>
    </subComponents>
</component>
